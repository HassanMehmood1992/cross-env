{
    "root": true,
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "extends": [
        "@nuxtjs",
        "plugin:nuxt/recommended"
    ],
    "rules": {
        "camelcase": "off",
        "vue/require-default-prop": "off",
        "vue/require-prop-types": "off",
        "vue/no-mutating-props": "warn",
        "vue/no-v-html": "off",
        "vue/order-in-components": [
            "warn",
            {
                "order": [
                    "el",
                    "name",
                    "parent",
                    "functional",
                    [
                        "delimiters",
                        "comments"
                    ],
                    [
                        "components",
                        "directives",
                        "filters"
                    ],
                    "extends",
                    "mixins",
                    "inheritAttrs",
                    "model",
                    [
                        "props",
                        "propsData"
                    ],
                    "asyncData",
                    "fetch",
                    "data",
                    "computed",
                    "watch",
                    "LIFECYCLE_HOOKS",
                    "methods",
                    [
                        "template",
                        "render"
                    ],
                    "renderError"
                ]
            }
        ]
    }
}